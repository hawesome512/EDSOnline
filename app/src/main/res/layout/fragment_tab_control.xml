<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.xseec.eds.fragment.TabControlFragment">

        <TextView
            android:id="@+id/text_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin_normal"
            android:background="@drawable/state_alarm_gradient"
            android:gravity="center"
            android:padding="@dimen/view_padding_normal"
            android:text="Alarm"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_display" />

        <Button
            android:id="@+id/btn_on"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_below="@id/text_state"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/view_margin_normal"
            android:padding="@dimen/view_padding_normal"
            android:text="ON"
            android:textSize="@dimen/font_display"
            android:background="@color/colorOn"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btn_off"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_below="@id/btn_on"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/view_margin_normal"
            android:padding="@dimen/view_padding_normal"
            android:text="OFF"
            android:textSize="@dimen/font_display"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGrayNormal"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>