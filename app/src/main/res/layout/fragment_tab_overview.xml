<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xseec.eds.fragment.TabOerviewFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView style="@style/Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_current"
                        style="@style/CardTextTitle"
                        android:text="Ir=800A" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_chart"
                        android:layout_width="match_parent"
 android:layout_marginBottom="@dimen/view_margin_normal"                       android:layout_height="@dimen/view_header_hei" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CardTextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/device_state" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_state"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/image_size"
                        android:layout_margin="@dimen/view_margin_normal"
                        android:layout_weight="1"
                        android:src="@color/colorNormal" />

                    <TextView
                        android:id="@+id/text_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/view_margin_normal" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardTextTitle"
                        android:text="@string/device_record" />

                    <LinearLayout style="@style/LinearLayoutHorBasicItem">

                        <ImageView
                            style="@style/ImageBasicItem"
                            android:layout_marginLeft="@dimen/view_margin_normal"
                            android:layout_marginVertical="@dimen/view_margin_normal"
                            android:src="@drawable/circle_peak" />

                        <TextView
                            style="@style/TextBasicItemName"
                            android:text="@string/device_peak" />

                        <TextView
                            android:id="@+id/text_peak"
                            style="@style/TextBasicItemValue"
                            android:layout_marginRight="@dimen/view_margin_normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/view_margin_normal"
                        android:background="@color/colorDivider" />

                    <LinearLayout style="@style/LinearLayoutHorBasicItem">

                        <ImageView
                            style="@style/ImageBasicItem"
                            android:layout_marginLeft="@dimen/view_margin_normal"
                            android:layout_marginVertical="@dimen/view_margin_normal"
                            android:src="@drawable/circle_danger" />

                        <TextView
                            style="@style/TextBasicItemName"
                            android:text="@string/device_trip" />

                        <TextView
                            android:id="@+id/text_trip"
                            style="@style/TextBasicItemValue"
                            android:layout_marginRight="@dimen/view_margin_normal" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
