<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_options"
    android:layout_width="match_parent" android:layout_height="@dimen/image_size_normal"
    android:background="@drawable/button_radius_conner_gray"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_phone_white"
        android:paddingVertical="@dimen/view_padding_small"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginVertical="@dimen/view_margin_small"/>
    <ImageView
        android:id="@+id/image_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_scan_white"
        android:paddingVertical="@dimen/view_padding_small"/>
</LinearLayout>