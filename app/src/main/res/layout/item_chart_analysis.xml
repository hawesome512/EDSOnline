<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_width_port"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/view_margin_small"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_first"
                style="@style/TextInHalfParentHeightTitle"
                android:background="@color/colorPhaseA"
                android:text="@string/detail_max" />

            <TextView
                android:id="@+id/text_first"
                style="@style/TextInHalfParentHeight" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/view_margin_small"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_secend"
                style="@style/TextInHalfParentHeightTitle"
                android:background="@color/colorPhaseB"
                android:text="@string/detail_min" />

            <TextView
                android:id="@+id/text_secend"
                style="@style/TextInHalfParentHeight" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/view_margin_small"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_last"
                style="@style/TextInHalfParentHeightTitle"
                android:background="@color/colorPhaseC"
                android:text="@string/detail_avg" />

            <TextView
                android:id="@+id/text_last"
                style="@style/TextInHalfParentHeight" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>