<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">
    <ImageView
        android:id="@+id/image_type"
        android:layout_width="@dimen/image_size_normal"
        android:layout_height="@dimen/image_size_normal"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/view_margin_normal" />

    <TextView
        android:id="@+id/text_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_type"
        android:layout_marginTop="@dimen/view_margin_normal"
        android:layout_marginRight="@dimen/image_size_normal"
        android:textColor="@color/colorPrimaryText"
        android:lineSpacingExtra="@dimen/view_margin_small"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_action"
        android:layout_marginRight="@dimen/view_margin_normal"
        android:layout_marginTop="@dimen/view_margin_normal"
        android:layout_alignLeft="@id/text_action">

        <TextView
            android:id="@+id/text_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_normal"
            />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_layout"
        android:layout_marginTop="@dimen/view_margin_small"
        android:layout_marginHorizontal="@dimen/view_margin_normal"
        android:background="@color/colorDivider"
        />
</RelativeLayout>
