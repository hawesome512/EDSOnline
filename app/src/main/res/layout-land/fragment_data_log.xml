<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xseec.eds.fragment.DataLogFragment">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/view_margin_small"
            android:layout_weight="3">

            <include layout="@layout/item_progress" />

            <include layout="@layout/item_line_chart" />
        </LinearLayout>


        <include layout="@layout/item_chart_analysis" />

    </LinearLayout>
</LinearLayout>